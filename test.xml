<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Suite1">
    <test name="Amazon">
        <classes>
            <class name="testng_xml.Amazon">
                <methods>
                    <include name="openUrl"/>
                    <include name="verifyTodaysDeals"/>
                    <include name="verifyUserInfo"/>
                </methods>
            </class>

        </classes>
    </test>

    <test name="UiActions">
        <classes>
            <class name="testng_xml.UiActions">
                <methods>
                    <include name="openUrl"/>
                    <include name="enterUserName"/>
                    <include name="enterUserPassword"/>
                    <include name="Login"/>


                </methods>
            </class>

        </classes>
    </test>


</suite>
